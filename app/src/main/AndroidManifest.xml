<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aadim.trafficdigitalvehicle">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="VehiDocs Traffic"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrafficDigitalVehicle"
        tools:targetApi="31">
        <activity
            android:name=".imageTwoActivity"
            android:exported="false" />
        <activity
            android:name=".imageOneActivity"
            android:exported="false" />
        <activity
            android:name=".BluebookPageActivity"
            android:exported="false" />
        <activity
            android:name=".ScanBarCodeBluebookActivity"
            android:exported="false" />
        <activity
            android:name=".LicensePageActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ScanBarCodeActivity"
            android:exported="false" />
        <activity
            android:name=".MenuActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".CompareImageActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>